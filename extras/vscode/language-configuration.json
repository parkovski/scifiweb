{
  "comments": {
    "lineComment": "#"
  },
  "brackets": [
    [ "(", ")" ],
    [ "[", "]" ]
  ],
  "autoClosingPairs": [
    [ "(", ")" ],
    [ "[", "]" ],
    {
      "open": "'",
      "close": "'",
      "notIn": [
        "string", "comment"
      ]
    }
  ],
  "surroundingPairs": [
    [ "(", ")" ],
    [ "[", "]" ],
    [ "'", "'" ]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^[A-Za-z0-9_]+:",
    "decreaseIndentPattern": ""
  },
  "wordPattern": "(?:`[a-zA-Z0-9_]|[a-zA-Z_])[a-zA-Z0-9_]*"
}