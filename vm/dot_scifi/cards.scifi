Card: collectable group;
  has amount;
  has collectable group [CommonCard, RareCard];

CommonCard: collectable group;
  has collectable [
    Bomb, Bow, Sword
  ];

RareCard: collectable group;
  has collectable [
    FireBow, FreezeRay
  ];

# Common cards
Bomb: collectable;
Bow: collectable;
Sword: collectable;

# Rare cards
FireBow: collectable;
FreezeRay: collectable;